<!-- boilerplate.ejs -->
<%
    // define the page title
    var pageTitle = "Evaluation";
%>

<!-- dont change the boilerplate code path -->
<%- include('../layouts/boilerplate', { pageTitle: pageTitle }) %>


<!-- Specific page content starts here -->
<link rel="stylesheet" type="text/css" href="/css/evaluation.css">

<nav class="bg-custom-rgba p-4">
    <div class="container mx-auto flex justify-between items-center">
        <a href="#" class="text-dark text-2xl font-semibold">Archivo</a>
        <div>
            <a href="/" class="text-dark text-lg font-semibold mx-7">Dashboard</a>
            <a href="#" class="text-dark text-lg font-semibold mx-7">Tasks</a>
            <a href="#" class="text-dark text-lg font-semibold mx-7">Calendar</a>
            <a href="#" class="text-dark text-lg font-semibold mx-7">Reports</a>
            <a href="#" class="text-dark text-lg font-semibold mx-7">Settings</a>
        </div>
    </div>
</nav>

<!-- Main Content -->
<div class="container mx-auto my-8">
    <div class="flex">
        <!-- Sidebar -->
        <div class="w-1/4 bg-zinc-400 p-4 shadow">
            <h2 class="text-gray-700 font-semibold mb-4">Recent Tasks</h2>
            <ul>
                <li class="mb-2"><a href="#" class="text-blue-600">Task 1</a></li>
                <li class="mb-2"><a href="#" class="text-blue-600">Task 2</a></li>
                <li class="mb-2"><a href="#" class="text-blue-600">Task 3</a></li>
            </ul>
            <h2 class="text-gray-700 font-semibold mt-8 mb-4">Notifications</h2>
            <ul>
                <li class="mb-2"><a href="#" class="text-blue-600">Notification 1</a></li>
                <li class="mb-2"><a href="#" class="text-blue-600">Notification 2</a></li>
            </ul>
        </div>

        <!-- Main Dashboard -->
        <div class="w-3/4 ml-4">
            <h1 class="text-2xl font-semibold text-gray-700 mb-4">Evaluation Overview</h1>
            <div class="grid grid-cols-3 gap-4">
                <div class="bg-white p-4 shadow">
                    <h2 class="text-gray-700 font-semibold">Tasks Completed</h2>
                    <p class="text-2xl">69</p>
                </div>
                <div class="bg-zinc-400 p-4 shadow">
                    <h2 class="text-gray-700 font-semibold">Tasks In Progress</h2>
                    <p class="text-2xl">25</p>
                </div>
                <div class="bg-dark p-4 shadow">
                    <h2 class="text-gray-700 font-semibold">Upcoming Deadlines</h2>
                    <p class="text-2xl">6</p>
                </div>
            </div>
            <div class="mt-8 bg-white p-4 shadow">
                <h2 class="text-gray-700 font-semibold mb-4">Tasks Chart</h2>
                <canvas id="tasksChart"></canvas>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('tasksChart').getContext('2d');
    var chart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Completed', 'In Progress', 'Upcoming'],
            datasets: [{
                label: 'Tasks',
                data: [69, 25 , 6],
                backgroundColor: ['#4CAF50', '#FFC107', '#F44336']
            }]
        },
        options: {}
    });
</script>

</body>
</html>
